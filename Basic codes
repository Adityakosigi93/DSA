#include <stdio.h>
#define SIZE 100

// Structure definition
struct student {
    int id;
    int age;
    int marks;
};
void accept_input(struct student *s1);
void display_output(struct student s1);

int main() {
    struct student s[SIZE];
    int no_of_students, i;

    printf("Please enter number of students: ");
    scanf("%d", &no_of_students);

    for (i = 0; i < no_of_students; i++) {
        printf("\n--- Enter details for student %d ---\n", i + 1);
        accept_input(&s[i]);  // Pass address (pointer)
    }

    printf("\n===== STUDENT DETAILS =====\n");
    for (i = 0; i < no_of_students; i++) {
        printf("\nStudent %d:\n", i + 1);
        display_output(s[i]);
    }

    return 0;
}
void accept_input(struct student *s1) {
    printf("Enter the ID: ");
    scanf("%d", &s1->id);
    printf("Enter the age: ");
    scanf("%d", &s1->age);
    printf("Enter the marks: ");
    scanf("%d", &s1->marks);
}

// Function to display student details
void display_output(struct student s1) {
    printf("ID: %d\n", s1.id);
    printf("Age: %d\n", s1.age);
    printf("Marks: %d\n", s1.marks);
}


#include <stdio.h>
#include <ctype.h>   // for isdigit()

int stack[20];
int top = -1;

void push(int x)
{
    stack[++top] = x;
}

int pop()
{
    return stack[top--];
}

int main()
{
    char exp[20];
    int i, n1, n2, n3, num;

    printf("Enter the postfix expression: ");
    scanf("%s", exp);

    // Use for loop instead of pointer traversal
    for (i = 0; exp[i] != '\0'; i++)
    {
        if (isdigit(exp[i]))
        {
            num = exp[i] - '0';   // convert char to int
            push(num);
        }
        else
        {
            n1 = pop();
            n2 = pop();
            switch (exp[i])
            {
                case '+':
                    n3 = n2 + n1;
                    break;
                case '-':
                    n3 = n2 - n1;
                    break;
                case '*':
                    n3 = n2 * n1;
                    break;
                case '/':
                    n3 = n2 / n1;
                    break;
                default:
                    printf("Invalid operator: %c\n", exp[i]);
                    return 1;
            }
            push(n3);
        }
    }

    printf("Result of expression = %d\n", pop());
    return 0;
}
